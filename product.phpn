            // Update notification content
            const image = cartNotification.querySelector('.cart-notification-image');
            const title = cartNotification.querySelector('.cart-notification-title');
            const message = cartNotification.querySelector('.cart-notification-message');
            
            image.src = 'uploads/' + productImage;
            image.alt = productName;
            title.textContent = productName;
            message.textContent = 'has been added to cart';
            
