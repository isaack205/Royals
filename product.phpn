        // Close modals when clicking outside
        document.addEventListener('click', function(e) {
            const colorModal = document.getElementById('colorModal');
            const sizeGuideModal = document.getElementById('sizeGuideModal');
            const selectionRequiredModal = document.getElementById('selectionRequiredModal');
            
            if (colorModal.style.display === 'flex' && !colorModal.contains(e.target) && e.target !== document.querySelector('[onclick="openColorModal()"]')) {
                closeColorModal();
            }
            
            if (sizeGuideModal.style.display === 'flex' && !sizeGuideModal.contains(e.target) && e.target !== document.querySelector('[onclick="openSizeGuide()"]')) {
                closeSizeGuide();
            }
            
            if (selectionRequiredModal.style.display === 'flex' && !selectionRequiredModal.contains(e.target)) {
                closeSelectionRequiredModal();
            }
        });
        
        // On page load for mobile, always show description
        document.addEventListener('DOMContentLoaded', function() {
