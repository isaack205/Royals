<?php
// Start the session
session_start();

// Include database connection
include('db.php');

// Check if product ID is set
if (!isset($_GET['id']) || !is_numeric($_GET['id'])) {
    header("Location: index.php");
    exit();
}

$product_id = intval($_GET['id']);

// Fetch product details
$product_query = "SELECT * FROM products WHERE id = $product_id";
$product_result = $connection->query($product_query);

if ($product_result->num_rows === 0) {
    header("Location: index.php");
    exit();
}

$product = $product_result->fetch_assoc();

// Process colors and sizes
$colors = explode(',', $product['available_colors']);
$sizes = explode(',', $product['available_sizes']);

// Process secondary images
$secondary_images = json_decode($product['secondary_image'] ?? '[]', true) ?: [];

// Include header
include('header.php');

// Check if user is logged in
$isLoggedIn = isset($_SESSION['user_id']);
?>

